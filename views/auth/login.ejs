<script>
const Api = axios.create({
    baseURL: 'http://localhost:3000'
});
new Vue({
    el: '#login',
    data () {
        return{
            email: '',
            password: '',
            msg: ''
        }
    },
    methods: {
        login (e) {
            e.preventDefault()
//            const fdata = new FormData();
//            fdata.append('email', this.email)
//            fdata.append('password', this.password)

            const user = {
                username: this.email,
                password: this.password
            }

            const allFieldsFilled = Object
                 .keys(user)
                 .every(key => !!user[key])

		        if(!allFieldsFilled){
                    this.msg = 'შეავსე ყველა ველი'
		        }else{
                    Api.post('/login', user)
                         .then((response) => {
                             if(response.status === 200){
                             window.location.replace(response.data.location)
                             }else{
                             	this.msg = response.data.error
                             }
                         })
                         .catch((err) => {
                             this.msg === 'Something went wrong'
                         })
		        }
        }
    }
})
</script>
